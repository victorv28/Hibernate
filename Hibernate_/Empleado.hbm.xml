<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="hibernate.Empleado" table="empleados">

		<id name="idempleado" type="int" column="idempleado">
			<generator class="native" />
		</id>

		<property name="nombre" column="first_name" type="string" />
		<property name="apellido" column="last_name" type="string" />
		<property name="departamento" column="depart" type="string" />
	</class>
</hibernate-mapping>
